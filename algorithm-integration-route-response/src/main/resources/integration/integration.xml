<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:int="http://www.springframework.org/schema/integration"
             xmlns="http://www.springframework.org/schema/integration"
             xsi:schemaLocation="http://www.springframework.org/schema/integration
             http://www.springframework.org/schema/integration/spring-integration.xsd

		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <int:channel id="commonResponseChannel">
        <int:queue/>
    </int:channel>
    <int:channel id="rtdsResponseChannel">
        <int:queue/>
    </int:channel>

    <int:channel id="service1ResponseChannel">
        <int:queue/>
    </int:channel>

    <int:channel id="service2ResponseChannel">
        <int:queue/>
    </int:channel>

    <int:poller id="defaultPoller" default="true" trigger="randomizedDelayTrigger"/>


    <router id="appRouter" input-channel="commonResponseChannel" ref="commonRequestRouter" method="route"
            default-output-channel="rtdsResponseChannel"/>


    <beans:bean id="randomizedDelayTrigger" class="ru.vood.responce.common.RandomizedDelayTrigger"/>
</beans:beans>